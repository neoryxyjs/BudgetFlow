<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir tráfico HTTP (cleartext) para desarrollo local -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Para emulador Android -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Para dispositivo físico - IP local de tu computadora -->
        <domain includeSubdomains="true">192.168.1.3</domain>
        <!-- Para localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Mantener seguridad para otros dominios (solo HTTPS) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

